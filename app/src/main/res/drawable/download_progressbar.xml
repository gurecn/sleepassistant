<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:centerY="0.5"
                android:endColor="#e8e8e8"
                android:centerColor="#F5F5F5"
                android:startColor="#e8e8e8" />
        </shape>
    </item>
    
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:angle="270"
                    android:centerY="0.5"
                    android:endColor="#3d3e4f"
                    android:centerColor="#3d3e4f"
                    android:startColor="#3d3e4f" />
            </shape>
        </clip>
    </item>
    
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:angle="270"
                    android:centerY="0.5"
                    android:endColor="#3d3e4f"
                    android:centerColor="#3d3e4f"
                    android:startColor="#3d3e4f" />
            </shape>
        </clip>
    </item>

</layer-list>